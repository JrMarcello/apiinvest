[
  {
    "group": "Admin",
    "permissions": [
      {
        "resource": "*",
        "methods": "*",
        "action": "allow"
      }
    ]
  },
  {
    "group": "Investidor",
    "permissions": [
      {
        "resource": "/user",
        "methods": ["POST", "PUT", "DELETE"],
        "action": "allow"
      },
      {
        "resource": "/user/:id",
        "methods": ["GET"],
        "action": "allow"
      },
      {
        "resource": "/user/login",
        "methods": ["POST"],
        "action": "allow"
      },
      {
        "resource": "/user/forgotPassword",
        "methods": ["POST"],
        "action": "allow"
      },
      {
        "resource": "/user/resetpassword",
        "methods": ["PUT"],
        "action": "allow"
      },
      {
        "resource": "/investor/*",
        "methods": ["GET", "POST", "PUT"],
        "action": "allow"
      },
      {
        "resource": "/investment",
        "methods": ["POST"],
        "action": "allow"
      },
      {
        "resource": "/investment/investor/:id",
        "methods": ["GET"],
        "action": "allow"
      },
      {
        "resource": "/investment/pendings",
        "methods": ["GET"],
        "action": "deny"
      },
      {
        "resource": "/investment/:id",
        "methods": ["GET", "DELETE"],
        "action": "allow"
      },
      {
        "resource": "/investment/:id/ted",
        "methods": ["PUT"],
        "action": "allow"
      },
      {
        "resource": "/investment/:id",
        "methods": ["DELETE"],
        "action": "allow"
      },
      {
        "resource": "/builder/:id",
        "methods": ["GET"],
        "action": "allow"
      },
      {
        "resource": "/building/:id",
        "methods": ["GET"],
        "action": "allow"
      },
      {
        "resource": "/building/availables/",
        "methods": ["GET"],
        "action": "allow"
      },
      {
        "resource": "/fundraising/:id/amountraised",
        "methods": ["GET"],
        "action": "allow"
      },
      {
        "resource": "/fundraising/:id/investors",
        "methods": ["GET"],
        "action": "allow"
      }
    ]
  },
  {
    "group": "Construtor",
    "permissions": [
      {
        "resource": "*",
        "methods": "*",
        "action": "deny"
      }
    ]
  }
]
