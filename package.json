{
  "name": "web-api",
  "version": "1.0.0",
  "description": "Buildinvest web api",
  "private": true,
  "author": "Marcello Jr",
  "license": "ISC",
  "main": "./src/core/server.js",
  "scripts": {
    "build": "docker-compose up -d --build && npm run build-db",
    "build-db": "chmod +x db/create-db.sh && ./db/create-db.sh",
    "rebuild": "docker rm buildinvest-api && docker rmi -f buildinvest-api && npm run build",
    "clear": "docker rm -f buildinvest-api buildinvest-db && docker rmi -f buildinvest-api && docker network prune -f && docker volume prune -f",
    "exec": "docker exec -it web-api /bin/sh",
    "start": "docker-compose up -d",
    "stop": "docker-compose stop",
    "dev": "nodemon ./src/core/server.js",
    "lint": "eslint ./src",
    "apidoc": "apidoc -i ./src/modules/**/ -o ./public/api"
  },
  "dependencies": {
    "@google-cloud/storage": "^3.5.0",
    "apidoc": "^0.20.1",
    "bcrypt": "^3.0.8",
    "body-parser": "^1.19.0",
    "chalk": "^2.4.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-acl": "^2.0.8",
    "express-validator": "^6.4.1",
    "glob": "^7.1.6",
    "helmet": "^3.22.0",
    "jsonwebtoken": "^8.5.1",
    "logger": "0.0.1",
    "moment": "^2.25.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "nodemailer": "^6.4.6",
    "nodemailer-express-handlebars": "^3.3.0",
    "passport": "^0.4.1",
    "passport-http-bearer": "^1.0.1",
    "pg": "^7.18.2",
    "ship-hold": "^2.0.2",
    "uuid": "^3.4.0",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^3.10.0"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-babel-module": "^5.1.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "nodemon": "^1.19.4",
    "prettier": "^1.19.1",
    "sucrase": "^3.13.0"
  },
  "nodemonConfig": {
    "execMap": {
      "js": "sucrase-node ./src/core/server.js"
    }
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ],
      "global-require": 0,
      "import/no-dynamic-require": 0,
      "no-param-reassign": 0,
      "import/prefer-default-export": 0,
      "no-use-before-define": 0
    }
  },
  "prettier": {
    "eslintIntegration": true,
    "printWidth": 140,
    "semi": false,
    "singleQuote": true
  }
}
